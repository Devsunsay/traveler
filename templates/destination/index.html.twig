{% extends "index/admin.html.twig" %}

{% block content %}
    <h1>Destination index</h1>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Country</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for destination in destinations %}
                <tr>
                    <td>{{ destination.id }}</td>
                    <td>{{ destination.city }}</td>
                    <td>{{ destination.country.name }}</td>
                    <td>{{ destination.latitude }}</td>
                    <td>{{ destination.longitude }}</td>
                    <td>{{ destination.createdAt ? destination.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('admin_destination_show', {'id': destination.id}) }}">show</a>
                        <a href="{{ path('admin_destination_edit', {'id': destination.id}) }}">edit</a>
                        <a href="{{ path('admin_destination_delete', {'id': destination.id}) }}">delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('admin_destination_new') }}">Create new</a>
{% endblock %}
