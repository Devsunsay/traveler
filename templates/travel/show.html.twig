{% extends "index/admin.html.twig" %}

{% block content %}
    <h1>Travel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ travel.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ travel.destination }}</td>
            </tr>
            <tr>
                <th>Country</th>
{#                We could also create a new variable with {{  set pays = destination.pays }}#}
                <td>{{ travel.destination.country }}</td>
            </tr>
            <tr>
                <th>DepartureDate</th>
                <td>{{ travel.departureDate ? travel.departureDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ArrivalDate</th>
                <td>{{ travel.arrivalDate ? travel.arrivalDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ travel.createdAt ? travel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_travel_index') }}">back to list</a>

    <a href="{{ path('admin_travel_edit', {'id': travel.id}) }}">edit</a>

    {{ include('travel/_delete_form.html.twig') }}
{% endblock %}
